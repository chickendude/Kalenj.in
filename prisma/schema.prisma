generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
}

enum PartOfSpeech {
  NOUN
  VERB
  ADJECTIVE
  ADVERB
  PRONOUN
  PREPOSITION
  CONJUNCTION
  INTERJECTION
  PHRASE
  OTHER
}

model Word {
  id           String          @id @default(cuid())
  kalenjin     String
  translations String
  partOfSpeech PartOfSpeech?
  notes        String?
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt
  sentences    WordSentence[]

  @@index([kalenjin])
  @@index([translations])
}

model ExampleSentence {
  id        String         @id @default(cuid())
  kalenjin  String
  english   String
  source    String?
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  words     WordSentence[]

  @@index([kalenjin])
}

model WordSentence {
  wordId            String
  exampleSentenceId String
  word              Word            @relation(fields: [wordId], references: [id], onDelete: Cascade)
  exampleSentence   ExampleSentence @relation(fields: [exampleSentenceId], references: [id], onDelete: Cascade)

  @@id([wordId, exampleSentenceId])
  @@index([exampleSentenceId])
}

model Story {
  id          String         @id @default(cuid())
  title       String
  description String?
  source      String?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  sentences   StorySentence[]
}

model StorySentence {
  id           String   @id @default(cuid())
  storyId      String
  sentenceOrder Int
  kalenjin     String
  english      String
  grammarNotes String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  story        Story    @relation(fields: [storyId], references: [id], onDelete: Cascade)

  @@unique([storyId, sentenceOrder])
  @@index([storyId])
  @@index([kalenjin])
}
